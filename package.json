{
  "name": "@cdllqos/mini-x",
  "version": "0.2.2",
  "description": "A tool for building miniapp more quickly",
  "author": "cdllqos",
  "license": "MIT",
  "bin": {
    "mini-x": "dist/main.js"
  },
  "repository": {
    "url": "https://github.com/cdllqos/mini-x",
    "type": "git"
  },
  "keywords": [
    "miniapp",
    "miniprogram",
    "typescript",
    "ts",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/cdllqos/mini-x/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prebuild": "node scripts/pre-build.js",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "prepublishOnly": "npm run build",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint-staged": "npx lint-staged",
    "test": "jest --clearCache && jest",
    "test:watch": "jest --clearCache && jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@swc/core": "^1.2.127",
    "chokidar": "^3.5.2",
    "esbuild": "^0.14.11",
    "fs-extra": "^10.0.0",
    "node-html-parser": "^5.2.0",
    "rxjs": "^7.5.1",
    "sass": "^1.48.0"
  },
  "peerDependencies": {
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "27.4.0",
    "@types/node": "^18.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "lint-staged": "^12.1.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "tdesign-miniprogram": "^0.4.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "moduleNameMapper": {
      "^@src/(.*)": "<rootDir>/../src/$1",
      "^@test/(.*)": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.{ts,md,html,css,scss,json}": [
      "prettier --write"
    ]
  }
}
